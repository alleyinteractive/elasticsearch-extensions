{
  "name": "alleyinteractive/elasticsearch-extensions",
  "description": "A WordPress plugin to make integrating sites with Elasticsearch easier.",
  "license": "GPL-3.0-or-later",
  "type": "wordpress-plugin",
  "authors": [
    {
      "name": "Alley",
      "email": "info@alley.co"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^2.0",
    "alleyinteractive/pest-plugin-wordpress": "^1.0",
    "alleyinteractive/searchpress": "dev-main",
    "automattic/vip-go-mu-plugins-built": "dev-master",
    "phpstan/extension-installer": "^1.1",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "wpackagist-plugin/elasticpress": "^4.2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*"
      ]
    },
    {
      "type": "package",
      "package": {
        "name": "automattic/vip-go-mu-plugins-built",
        "type": "wordpress-plugin",
        "version": "dev-master",
        "source": {
          "type": "git",
          "url": "https://github.com/Automattic/vip-go-mu-plugins-built.git",
          "reference": "master"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "alleyinteractive/searchpress",
        "type": "wordpress-plugin",
        "version": "dev-main",
        "source": {
          "type": "git",
          "url": "https://github.com/alleyinteractive/searchpress.git",
          "reference": "main"
        }
      }
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "alleyinteractive/composer-wordpress-autoloader": true,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "../../mu-plugins": [
        "automattic/vip-go-mu-plugins-built"
      ],
      "../searchpress": [
        "alleyinteractive/searchpress"
      ],
      "../{$name}": [
        "type:wordpress-plugin"
      ]
    }
  },
  "scripts": {
    "phpcbf": "phpcbf .",
    "phpcs": "phpcs .",
    "phpstan": [
      "phpstan analyze --ansi --memory-limit=1G"
    ],
    "phpunit": "@test",
    "setup": [
      "composer install"
    ],
    "lint": [
      "@phpcs",
      "@phpstan"
    ],
    "test": "pest"
  }
}
